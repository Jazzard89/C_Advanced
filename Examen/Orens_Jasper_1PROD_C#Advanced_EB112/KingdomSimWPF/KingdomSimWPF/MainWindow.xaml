<Window x:Class="KingdomSimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KingdomSimWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0 10px">
            <Label Content="Gebruikersnaam" FontSize="15" Margin="0 10px"/>
            <TextBox Name="TxtName" FontSize="15" Margin="0 10px" />
            <Label Content="Wachtwoord" FontSize="15" Margin="0 10px"/>
            <PasswordBox Name="TxtPassword" FontSize="15" Margin="0 10px"/>
            <Button Content="Log In" Name="BtnLogIn" Click="BtnLogIn_Click"/>
        </StackPanel>
    </Grid>
</Window>
