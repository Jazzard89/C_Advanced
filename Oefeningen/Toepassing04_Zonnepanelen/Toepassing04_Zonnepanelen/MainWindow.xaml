<Window x:Class="Toepassing04_Zonnepanelen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toepassing04_Zonnepanelen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Name="MenuRead" Header="Inlezen" Click="MenuRead_Click" />
            <MenuItem Name="MenuDetails" Header="Details" Click="MenuDetails_Click" />

        </Menu>
        <TextBox Name="TxtResult" Grid.Row="1" Background="LightGray" Margin="20"/>
    </Grid>
</Window>
