<Window x:Class="Toepassing19_iList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toepassing19_iList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
            <Label Content="Module"/>
            <TextBox Name="TxtInput" Text="A11 Windows Server Admin" Width="300px"/>

        </StackPanel>
        <ListBox Name ="TxtOutput"  Grid.Row="1" Grid.Column="1" Margin="10"/>
        <StackPanel Grid.Column="2" Orientation="Vertical" Grid.RowSpan="2">
            <Button Name="btnToevoegen" Content="Toevoegen" Margin="30" Click="btnToevoegen_Click"/>
            <Button Name="btnZoeken" Content="Zoeken"  Margin="30" Click="btnZoeken_Click"/>
            <Button Name="btnVerwijderen" Content="Verwijderen"  Margin="30" Click="btnVerwijderen_Click"/>

        </StackPanel>
    </Grid>
</Window>
