<Window x:Class="Toepassing03_PuntenBestand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toepassing03_PuntenBestand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <ListBox Margin="20px" Grid.Row="0" Name="LBResultaat"/>

        <DockPanel Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Inlezen..." Name="BtnInlezen" Click="BtnInlezen_Click" Margin="10px" Width="120px"/>
            <Button Content="Verwerken" Name="BtnVerwerken" Click="BtnVerwerken_Click" Margin="10px" Width="120px" Visibility="Hidden"/>
            <Button Content="Nalezen..." Name="BtnNalezen" Click="BtnNalezen_Click" Margin="10px" Width="120px" Visibility="Hidden"/>
            <Button Content="Sluiten" Name="BtnSluiten" Click="BtnSluiten_Click" Margin="10px" Width="120px"/>
        </DockPanel>
    </Grid>
</Window>
