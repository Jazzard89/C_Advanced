<Window x:Class="Toepassing01_EmailBestand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toepassing01_EmailBestand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Margin="20 40" Name="TxtResultaat" FontFamily="Consolas"/>
        <StackPanel Grid.Column="1" Margin="20 40">
            <Button Content="Inlezen" Margin="10" Click="Inlezen_Click"/>
            <Button Content="Inlezen / Dialoogvenster" Margin="10" Click="Inlezen_Dialoogvenster_Click"/>
            <Button Content="Inlezen / Dictionary" Margin="10" Click="Inlezen_Dictionary_Click"/>
            <Button Content="Wegschrijven / Dictionary" Margin="10" Click="Wegschrijven_Dictionary_Click"/>

            <Label Content="Naam" Margin="0 15 0 0"/>
            <TextBox Name="TxtNaam"/>

            <Label Content="E-mailadres" Margin="0 15 0 0"/>
            <TextBox Name="TxtEmail"/>

            <Button Content="Toevoegen" Margin="10" Click="Toevoegen_Click"/>
        </StackPanel>


    </Grid>
</Window>
